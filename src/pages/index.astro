---
import { Sprite } from "astro-icon"
import MainLayout from "~/layouts/MainLayout.astro"
import GetStarted from "./_components/GetStarted.astro"
import HandsFree from "./_components/HandsFree.astro"
import Hero from "./_components/Hero.astro"
import SellingPoints from "./_components/SellingPoints.astro"
import ToolingAndEcosystem from "./_components/ToolingAndEcosystem.astro"

export const prerender = true
---

<Sprite.Provider>
	<MainLayout image={{ src: "/og/astro.jpg", alt: "Astro - Build the web you want." }}>
		<Hero />
		<div class="relative">
			<div class="noise-underlay bg-grid absolute inset-0"></div>
			<div class="relative grid gap-32 sm:gap-40 md:gap-48 lg:gap-64">
				<HandsFree />
				<SellingPoints />
				<ToolingAndEcosystem />
				<GetStarted />
			</div>
		</div>
		<!-- <Sponsors /> -->
	</MainLayout>
</Sprite.Provider>
